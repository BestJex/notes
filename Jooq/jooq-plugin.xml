------------------------------
自动生成类插件
------------------------------
<plugin>
	<groupId>org.jooq</groupId>
	<artifactId>jooq-codegen-maven</artifactId>
	<executions>
		<execution>
			<goals>
				<goal>generate</goal>
			</goals>
		</execution>
	</executions>
	<!-- 配置mysql渠道 -->
	<dependencies>
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>${mysql.version}</version>
		</dependency>
	</dependencies>
	<configuration>
		<!-- 指定配置文件的地址 
			<configurationFile>src/main/resources/jooq/jooq.xml</configurationFile> 
		-->
		<jdbc>
			<driver>com.mysql.cj.jdbc.Driver</driver>
			<url>jdbc:mysql://localhost:3306/jooq?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=GMT%2b8&amp;allowMultiQueries=true</url>
			<user>root</user>
			<password>root</password>
		</jdbc>
		<generator>
			<!-- 数据库的配置 -->
			<database>
				<!-- 指定数据库类型 -->
				<name>org.jooq.meta.mysql.MySQLDatabase</name>
				<!-- 数据库名称/用户 -->
				<inputSchema>jooq</inputSchema>
				<!-- 包含的表 -->
				<includes>.*</includes>
				<!-- 排除的表 -->
				<excludes></excludes>
			</database>
			
			<!-- 生成配置 -->
			<generate>
				<!--生成dao -->
				<daos>true</daos>
				<!-- 生成pojo -->
				<pojos>true</pojos>
				<!--把数据库时间类型映射到java 8时间类型 -->
				<javaTimeTypes>true</javaTimeTypes>
				<!-- 生成接口 -->
				<interfaces>true</interfaces>
				<!--是否生成spring注释，比如@Repository -->
				<springAnnotations>true</springAnnotations>
			</generate>
			
			<!-- 生成目录配置 -->
			<target>
				<!-- 是否清空目录 -->
				<clean>true</clean>
				<!-- 编码 -->
				<encoding>utf-8</encoding>
				<!-- 生成的包名 -->
				<packageName>io.springboot.jooq.generated</packageName>
				<!-- 生成的目标目录 -->
				<directory>src/main/java</directory>
			</target>
		</generator>
	</configuration>
</plugin>